@model Sporthall.WebUI.ViewModels.Halls.CreateHallViewModel

@{
    ViewData["Title"] = "Добавить зал";
}

<div class="content shadow-sm">
    <div class="content-header rounded-top">
        <div class="row justify-content-between align-items-center">
            <div class="col-sm my-3">
                <h6 class="content-title">
                    <i class="fas fa-info-circle pr-1"></i>
                    Добавить зал
                </h6>
            </div>
        </div>
    </div>
    <div class="content-body">
        <form id="hallAddForm" asp-area="" asp-controller="Halls" asp-action="Add" method="post">
            <partial name="/Views/Halls/Partials/_EditPartial.cshtml" />
        </form>
    </div>
    <div class="content-footer rounded-bottom">
        <div class="row">
            <div class="col-md my-2 text-right">
                <button form="hallAddForm" type="submit" class="btn btn-sm btn-info">
                    Сохранить
                </button>
            </div>
        </div>
    </div>
</div>
