@model Sporthall.WebUI.ViewModels.Halls.ViewHallViewModel

@{
    ViewData["Title"] = "Удалить зал";
}

<div class="content shadow-sm">
    <div class="content-header rounded-top">
        <div class="row justify-content-between align-items-center">
            <div class="col-sm my-3">
                <h6 class="content-title">
                    <i class="fas fa-info-circle pr-1"></i>
                    Удаление зала
                </h6>
            </div>
        </div>
    </div>
    <div class="content-body">
        <partial name="~/Views/Halls/Partials/_DetailsPartial.cshtml" />
    </div>
    <div class="content-footer rounded-bottom">
        <div class="row justify-content-between align-items-center">
            <div class="col-sm my-2">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="col-sm-auto my-2">
                <form asp-area="" asp-controller="Halls" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <partial name="_ConfirmDeleteModalPartial" />
                    <button type="button" class="btn btn-sm btn-danger btn-block" data-toggle="modal" data-target="#confirmDeleteModal">
                        Удалить
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
