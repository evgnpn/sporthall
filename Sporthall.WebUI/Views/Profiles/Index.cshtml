@model List<User>

@{
    ViewData["Title"] = "Все профили";
}

<div class="content shadow-sm">
    <div class="content-header rounded-top">
        <div class="row justify-content-between align-items-center">
            <div class="col-sm my-3">
                <h6 class="content-title">
                    <i class="fas fa-info-circle pr-1"></i>
                    Все профили
                </h6>
            </div>
        </div>
    </div>
    <div class="content-body p-0">
        <table class="table table-light table-striped table-custom text-center m-0">
            <tr>
                <th>ФИО</th>
                <th>Имя пользователя</th>
                @if (User.IsInRole("Manager") || User.IsInRole("GeneralManager"))
                {
                    <th></th>
                }
                <th><i class="fas fa-info-circle"></i></th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName @user.SurName</td>
                    <td>@user.UserName</td>
                    @if (User.IsInRole("Manager") || User.IsInRole("GeneralManager"))
                    {
                        <td>
                            <a asp-area="" asp-controller="Profiles" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-block badge mb-1" target="_blank">
                                Изменить
                            </a>
                            <br />
                        </td>
                    }
                    <td>
                        <a asp-area="" asp-controller="Profiles" asp-action="View" asp-route-id="@user.Id" target="_blank">
                            Подробно
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="content-footer rounded-bottom">
    </div>
</div>
